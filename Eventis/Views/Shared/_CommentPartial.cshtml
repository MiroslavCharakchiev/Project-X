@model Eventis.Models.Eventis.ViewModels.CommentViewModel

@using (Html.BeginForm("Create", "Comment", null, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text - danger" });

    if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            @Html.HiddenFor(c => c.AuthorId)
            @Html.HiddenFor(c => c.EventId)
            <hr />
            <p class="lead" style="padding-left:20em">Leave your comment below:</p>
            
            <div class="col-md-4"></div>
            <div class="col-md-4">
                @Html.TextAreaFor(c => c.Content, new { rows = 7, @class = "input-lg form-control text-center" })
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-1">
               <input type="submit" class="btn btn-success col-md-12" value="Submit">
            </div>
            <div class="col-md-5"></div>
        </div>
    }
    else
    {
        <p class="lead text-center">
            If you want to add comments please click
            <span>
                @Html.ActionLink("here", "Register", "Account", null, new { @class = "btn btn-info btn-lg" })
            </span>to register yourself now
        </p>
    }
}