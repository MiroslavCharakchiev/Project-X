@{
    ViewBag.Title = "Home Page";
}

@model ICollection<Eventis.Models.Eventis.Event>

<div class="jumbotron">
    <img src="../EventisLogo/eventisweb.jpg" alt="EventisLogo">
    <h2 class="text-center" style="color:cadetblue">EVENTS BECOME FEELINGS,FEELINGS BECOME EVENTS</h2>
    <p class="text-center">
        <a href="/Account/Register" class="btn btn-primary btn-lg">Register now!</a>
    </p>
</div>


<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-md-6">
            <h1 class="text-center">@i.Title</h1>
            <p class="text-center">@i.Status</p>
            @*Picturepath*@

            <div class="row">
                <p class="col-md-4 text-center">@i.StartDate</p>
                <p class="col-md-4 respon text-center">@i.ViewCount</p>
                <p class="col-md-4 text-center">@i.Category.Name</p>
            </div>
        </div>
    }
</div>